{
  "jwt"         : {
    "key"       : "[SECRET]",
    "public"    : "[PUBLIC]",
    "expiresIn" : 1800 // 30 * 60 sec
  },
  "account"     : {
    "port"          : 8050,
    "ip-whitelist"  : [],
    "impersonate" : {
      "username"  : null
    },
    "mongo"       : {
      "url"     : "mongodb://[USER]:[PASSWORD]@localhost/account"
    },
    "redis" : {
      "host"          : "[HOST]",
      "port"          : 6379,
      "password"      : "[PASSWORD]",
      "db"            : 8
    },
    "oauth" : {
      "callback"  : "https://www.breadboard.io/auth/callback",
      "strategy"  : [
        {
          "module"        : "passport-github2",
          "name"          : "github.com",
          "options"       : {
            "clientID"          : "[GITHUB_APP_IP]",
            "clientSecret"      : "[GITHUB_APP_SECRET]",
            "authorizationURL"  : null, // "https://github.com/login/oauth/authorize",
            "tokenURL"          : null, // "https://github.com/login/oauth/access_token",
            "customHeaders"     : null, // {},
            "userProfileURL"    : null, // "https://api.github.com/user",
            "userEmailURL"      : null  // "https://api.github.com/user/emails",
          },
          "scope"         : [
            "user:email",
            "public_repo",
            "repo",
            "read:repo_hook",
            "write:repo_hook"
          ]
        }
      ]
    }
  },
  "backend"     : {
      "mongodb"   : {
        "host"      : "localhost",
        "port"      : 27017,
        "user"      : "[USER]",
        "password"  : "[PASSWORD]"
      }
  }
}
